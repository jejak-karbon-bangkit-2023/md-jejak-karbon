<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="9dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/item_guide">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_guide_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_guide_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/tv_round_border"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:padding="4dp"
            android:textColor="@color/md_theme_light_onPrimaryContainer"
            android:textSize="15sp"

            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toEndOf="@+id/iv_guide_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Guide Category" />

        <TextView
            android:id="@+id/tv_guide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="128dp"
            android:fontFamily="@font/quicksand_bold"
            android:textAlignment="center"
            android:textColorHighlight="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.541"
            app:layout_constraintStart_toEndOf="@+id/iv_guide_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Guide Title" />

        <ImageView
            android:id="@+id/iv_date_logo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_date_logo"
            android:textAlignment="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_guide_date"
            app:layout_constraintEnd_toStartOf="@+id/tv_guide_date"
            app:layout_constraintStart_toStartOf="@+id/tv_guide_title"
            app:layout_constraintTop_toTopOf="@+id/tv_guide_date" />

        <TextView
            android:id="@+id/tv_guide_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="159dp"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center"
            android:textColorHighlight="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintStart_toEndOf="@+id/iv_guide_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_guide_title"
            app:layout_constraintVertical_bias="0.642"
            tools:text="20.05.2023" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>